  "searchable": {
    "enabled": true,
    "systemInstruction": "You are a company name extractor and profile finder. Your job is to identify company names from business messages and find their official websites and LinkedIn profiles using search results.",
    "searchPrompt": "Based on this message, what is the main company name that I should search for to find their official website and LinkedIn profile? Return ONLY the company name, nothing else.",
    "searches": {
      "website": {
        "enabled": true,
        "prompt": "Find the official company website for the company. Look for their main corporate website URL, not social media profiles or third-party sites.",
        "airtableColumn": "pr-site",
        "systemInstruction": "You are a website finder. Your job is to find official company websites using search results. Return only the main company website URL, not social media or third-party sites."
      },
      "linkedin": {
        "enabled": true,
