{
  "autonomous": {
    "enabled": true,
    "checkInterval": 14400000,
    "runOnStartup": true,
    "maxRetries": 3,
    "retryDelay": 30000,
    "logFile": "daemon.log"
  },
  "notifications": {
    "enabled": true,
    "methods": ["console", "file"],
    "logFile": "execution.log"
  },
  "storage": {
    "useTimestamps": true
  },
  "device": {
    "checkDeviceOnStart": true,
    "autoStartScrcpy": false,
    "scrcpyArgs": ["--stay-awake", "--turn-screen-off"]
  },
  "gemini": {
    "apiKey": "YOUR_GEMINI_API_KEY_HERE",
    "model": "gemini-2.5-flash",
    "systemInstruction": "You are a Twitter DM checking bot. Your job is to determine if there are any new unread messages in the Twitter DM interface. You should explain what you see first, then end your response with either 'yes' or 'no'.",
