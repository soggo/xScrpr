# Twitter DM Fetcher Configuration
# Copy this file to .env and fill in your actual values

# Google Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Twitter Authentication (Choose ONE method below)

# METHOD 1: Cookie-based login (RECOMMENDED - most reliable)
# Copy these from your browser's developer tools after logging in to Twitter/X
X_AUTH_TOKEN=your_auth_token_cookie_here
X_CT0=your_ct0_cookie_here

# METHOD 2: Username/Password login (Alternative)
# X_USERNAME=your_username_or_handle
# X_PASSWORD=your_password
# X_EMAIL=your_email_if_twitter_asks

# METHOD 3: All cookies as string (Advanced)
# X_COOKIES=auth_token=your_token; ct0=your_ct0; other_cookie=value

# Browser Configuration
HEADLESS=false
SLOW=true

# Airtable Configuration (Optional)
AIRTABLE_API_KEY=your_airtable_api_key_here
AIRTABLE_BASE_ID=your_airtable_base_id_here
AIRTABLE_TABLE_ID=your_messages_table_id_here
AIRTABLE_MESSAGE_REQUESTS_TABLE_ID=your_message_requests_table_id_here

# Notification Configuration (Optional)
# WEBHOOK_URL=https://hooks.slack.com/your-webhook-url
# NOTIFICATION_EMAIL=your-email@example.com
